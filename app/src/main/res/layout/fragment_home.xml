<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Texto de meta diaria -->
    <TextView
        android:id="@+id/tv_daily_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 ml / 2000 ml"
        android:textSize="24sp"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Barra de progreso -->
    <ProgressBar
        android:id="@+id/progress_daily"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:progressTint="@color/primary_blue"
        app:layout_constraintTop_toBottomOf="@id/tv_daily_water"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Imagen de gota -->
    <ImageView
        android:id="@+id/img_drop"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_drop"
        android:contentDescription="@string/drop_icon"
        app:layout_constraintTop_toBottomOf="@id/progress_daily"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Botón compartir -->
    <Button
        android:id="@+id/btn_share"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Compartir progreso"
        app:layout_constraintTop_toBottomOf="@id/img_drop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Botón correo -->
    <Button
        android:id="@+id/btn_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enviar por correo"
        app:layout_constraintTop_toBottomOf="@id/btn_share"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Botón cámara -->
    <Button
        android:id="@+id/btn_camera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Abrir Cámara"
        app:layout_constraintTop_toBottomOf="@id/btn_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Botón sitio web -->
    <Button
        android:id="@+id/btn_web"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sitio de hidratación"
        app:layout_constraintTop_toBottomOf="@id/btn_camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Botón configuración -->
    <Button
        android:id="@+id/btn_system_settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Configuración del sistema"
        app:layout_constraintTop_toBottomOf="@id/btn_web"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- FAB vaso -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_glass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_glass"
        app:backgroundTint="@color/primary_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp"/>

    <!-- FAB botella -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_bottle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bottle"
        app:backgroundTint="@color/primary_blue"
        app:layout_constraintBottom_toTopOf="@id/fab_add_glass"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
